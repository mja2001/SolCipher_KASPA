import React, { useState } from 'react';
import {
  Dialog,
  DialogContent,
  DialogHeader,
  DialogTitle,
  DialogDescription,
} from "@/components/ui/dialog";
import { Button } from "@/components/ui/button";
import { Input } from "@/components/ui/input";
import { Label } from "@/components/ui/label";
import { 
  Wallet, Key, Upload, Shield, Eye, EyeOff,
  AlertTriangle, Copy, CheckCircle2, Loader2
} from 'lucide-react';
import { toast } from 'sonner';
import { cn } from '@/lib/utils';

export default function WalletSetup({ isOpen, onClose, onWalletCreated }) {
  const [step, setStep] = useState('choose'); // choose, create, import, backup
  const [walletName, setWalletName] = useState('');
  const [password, setPassword] = useState('');
  const [confirmPassword, setConfirmPassword] = useState('');
  const [showPassword, setShowPassword] = useState(false);
  const [seedPhrase, setSeedPhrase] = useState('');
  const [generatedSeed, setGeneratedSeed] = useState('');
  const [isCreating, setIsCreating] = useState(false);
  const [seedCopied, setSeedCopied] = useState(false);

  const generateSeedPhrase = () => {
    const words = [
      'abandon', 'ability', 'able', 'about', 'above', 'absent', 'absorb', 'abstract',
      'absurd', 'abuse', 'access', 'accident', 'account', 'accuse', 'achieve', 'acid',
      'acoustic', 'acquire', 'across', 'act', 'action', 'actor', 'actress', 'actual',
      'adapt', 'add', 'addict', 'address', 'adjust', 'admit', 'adult', 'advance',
      'advice', 'aerobic', 'affair', 'afford', 'afraid', 'again', 'age', 'agent',
      'agree', 'ahead', 'aim', 'air', 'airport', 'aisle', 'alarm', 'album'
    ];
    
    const phrase = Array.from({ length: 12 }, () => 
      words[Math.floor(Math.random() * words.length)]
    ).join(' ');
    
    return phrase;
  };

  const handleCreateWallet = async () => {
    if (!walletName.trim()) {
      toast.error('Please enter a wallet name');
      return;
    }
    if (password.length < 8) {
      toast.error('Password must be at least 8 characters');
      return;
    }
    if (password !== confirmPassword) {
      toast.error('Passwords do not match');
      return;
    }

    setIsCreating(true);
    const seed = generateSeedPhrase();
    setGeneratedSeed(seed);
    
    await new Promise(resolve => setTimeout(resolve, 1500));
    setStep('backup');
    setIsCreating(false);
  };

  const handleImportWallet = async () => {
    if (!walletName.trim()) {
      toast.error('Please enter a wallet name');
      return;
    }
    if (!seedPhrase.trim()) {
      toast.error('Please enter your seed phrase');
      return;
    }
    if (password.length < 8) {
      toast.error('Password must be at least 8 characters');
      return;
    }

    setIsCreating(true);
    await new Promise(resolve => setTimeout(resolve, 2000));
    
    const randomHex = Array.from({ length: 64 }, () => 
      Math.floor(Math.random() * 16).toString(16)
    ).join('');

    const wallet = {
      name: walletName,
      public_address: `kaspa:qr${randomHex.slice(0, 58)}`,
      encrypted_data: btoa(JSON.stringify({ seed: seedPhrase })),
      is_active: true
    };

    onWalletCreated(wallet);
    setIsCreating(false);
    toast.success('Wallet imported successfully!');
    onClose();
  };

  const handleBackupComplete = async () => {
    if (!seedCopied) {
      toast.error('Please copy your seed phrase first');
      return;
    }

    setIsCreating(true);
    await new Promise(resolve => setTimeout(resolve, 1000));

    const randomHex = Array.from({ length: 64 }, () => 
      Math.floor(Math.random() * 16).toString(16)
    ).join('');

    const wallet = {
      name: walletName,
      public_address: `kaspa:qr${randomHex.slice(0, 58)}`,
      encrypted_data: btoa(JSON.stringify({ seed: generatedSeed })),
      is_active: true
    };

    onWalletCreated(wallet);
    setIsCreating(false);
    toast.success('Wallet created successfully!');
    onClose();
  };

  const copySeed = () => {
    navigator.clipboard.writeText(generatedSeed);
    setSeedCopied(true);
    toast.success('Seed phrase copied');
  };

  const resetState = () => {
    setStep('choose');
    setWalletName('');
    setPassword('');
    setConfirmPassword('');
    setSeedPhrase('');
    setGeneratedSeed('');
    setSeedCopied(false);
  };

  return (
    <Dialog open={isOpen} onOpenChange={() => { resetState(); onClose(); }}>
      <DialogContent className="bg-slate-900 border-slate-700 max-w-md">
        {step === 'choose' && (
          <>
            <DialogHeader>
              <DialogTitle className="text-white flex items-center gap-2">
                <div className="p-2 bg-gradient-to-br from-purple-500 to-cyan-500 rounded-lg">
                  <Wallet className="w-4 h-4 text-white" />
                </div>
                Setup Wallet
              </DialogTitle>
              <DialogDescription className="text-slate-400">
                Create a new wallet or import an existing one
              </DialogDescription>
            </DialogHeader>

            <div className="space-y-4 py-4">
              <Button
                onClick={() => setStep('create')}
                className="w-full h-auto py-6 bg-gradient-to-r from-purple-600 to-cyan-600 hover:from-purple-700 hover:to-cyan-700 flex flex-col items-center gap-2"
              >
                <Key className="w-6 h-6" />
                <div className="text-center">
                  <p className="font-semibold">Create New Wallet</p>
                  <p className="text-xs text-white/70">Generate a new secure wallet</p>
                </div>
              </Button>

              <Button
                onClick={() => setStep('import')}
                variant="outline"
                className="w-full h-auto py-6 border-slate-600 text-slate-300 hover:bg-slate-800 flex flex-col items-center gap-2"
              >
                <Upload className="w-6 h-6" />
                <div className="text-center">
                  <p className="font-semibold">Import Wallet</p>
                  <p className="text-xs text-slate-400">Restore from seed phrase</p>
                </div>
              </Button>
            </div>
          </>
        )}

        {step === 'create' && (
          <>
            <DialogHeader>
              <DialogTitle className="text-white">Create New Wallet</DialogTitle>
            </DialogHeader>

            <div className="space-y-4 py-4">
              <div className="space-y-2">
                <Label className="text-slate-300">Wallet Name</Label>
                <Input
                  placeholder="My Privacy Wallet"
                  value={walletName}
                  onChange={(e) => setWalletName(e.target.value)}
                  className="bg-slate-800 border-slate-700 text-white"
                />
              </div>

              <div className="space-y-2">
                <Label className="text-slate-300">Password</Label>
                <div className="relative">
                  <Input
                    type={showPassword ? 'text' : 'password'}
                    placeholder="••••••••"
                    value={password}
                    onChange={(e) => setPassword(e.target.value)}
                    className="bg-slate-800 border-slate-700 text-white pr-10"
                  />
                  <button
                    type="button"
                    onClick={() => setShowPassword(!showPassword)}
                    className="absolute right-3 top-1/2 -translate-y-1/2 text-slate-400 hover:text-slate-300"
                  >
                    {showPassword ? <EyeOff className="w-4 h-4" /> : <Eye className="w-4 h-4" />}
                  </button>
                </div>
              </div>

              <div className="space-y-2">
                <Label className="text-slate-300">Confirm Password</Label>
                <Input
                  type="password"
                  placeholder="••••••••"
                  value={confirmPassword}
                  onChange={(e) => setConfirmPassword(e.target.value)}
                  className="bg-slate-800 border-slate-700 text-white"
                />
              </div>

              <div className="flex gap-3">
                <Button
                  variant="outline"
                  onClick={() => setStep('choose')}
                  className="flex-1 border-slate-600 text-slate-300"
                >
                  Back
                </Button>
                <Button
                  onClick={handleCreateWallet}
                  disabled={isCreating}
                  className="flex-1 bg-gradient-to-r from-purple-600 to-cyan-600"
                >
                  {isCreating ? (
                    <>
                      <Loader2 className="w-4 h-4 mr-2 animate-spin" />
                      Creating...
                    </>
                  ) : (
                    'Create Wallet'
                  )}
                </Button>
              </div>
            </div>
          </>
        )}

        {step === 'import' && (
          <>
            <DialogHeader>
              <DialogTitle className="text-white">Import Wallet</DialogTitle>
            </DialogHeader>

            <div className="space-y-4 py-4">
              <div className="space-y-2">
                <Label className="text-slate-300">Wallet Name</Label>
                <Input
                  placeholder="My Imported Wallet"
                  value={walletName}
                  onChange={(e) => setWalletName(e.target.value)}
                  className="bg-slate-800 border-slate-700 text-white"
                />
              </div>

              <div className="space-y-2">
                <Label className="text-slate-300">Seed Phrase</Label>
                <textarea
                  placeholder="Enter your 12 or 24 word seed phrase..."
                  value={seedPhrase}
                  onChange={(e) => setSeedPhrase(e.target.value)}
                  className="w-full h-24 bg-slate-800 border border-slate-700 rounded-md text-white p-3 text-sm resize-none focus:outline-none focus:ring-2 focus:ring-purple-500"
                />
              </div>

              <div className="space-y-2">
                <Label className="text-slate-300">Password</Label>
                <Input
                  type="password"
                  placeholder="••••••••"
                  value={password}
                  onChange={(e) => setPassword(e.target.value)}
                  className="bg-slate-800 border-slate-700 text-white"
                />
              </div>

              <div className="flex gap-3">
                <Button
                  variant="outline"
                  onClick={() => setStep('choose')}
                  className="flex-1 border-slate-600 text-slate-300"
                >
                  Back
                </Button>
                <Button
                  onClick={handleImportWallet}
                  disabled={isCreating}
                  className="flex-1 bg-gradient-to-r from-purple-600 to-cyan-600"
                >
                  {isCreating ? (
                    <>
                      <Loader2 className="w-4 h-4 mr-2 animate-spin" />
                      Importing...
                    </>
                  ) : (
                    'Import Wallet'
                  )}
                </Button>
              </div>
            </div>
          </>
        )}

        {step === 'backup' && (
          <>
            <DialogHeader>
              <DialogTitle className="text-white flex items-center gap-2">
                <AlertTriangle className="w-5 h-5 text-amber-400" />
                Backup Your Seed Phrase
              </DialogTitle>
            </DialogHeader>

            <div className="space-y-4 py-4">
              <div className="bg-amber-500/10 border border-amber-500/30 rounded-xl p-4">
                <p className="text-amber-400 text-sm">
                  <strong>Important:</strong> Write down these words in order and store them securely. 
                  This is the only way to recover your wallet.
                </p>
              </div>

              <div className="bg-slate-800/50 rounded-xl p-4 border border-slate-700">
                <div className="grid grid-cols-3 gap-2">
                  {generatedSeed.split(' ').map((word, i) => (
                    <div key={i} className="bg-slate-900 rounded-lg px-3 py-2 text-center">
                      <span className="text-slate-500 text-xs mr-1">{i + 1}.</span>
                      <span className="text-white text-sm font-mono">{word}</span>
                    </div>
                  ))}
                </div>
              </div>

              <Button
                onClick={copySeed}
                variant="outline"
                className={cn(
                  "w-full border-slate-600",
                  seedCopied ? "text-emerald-400 border-emerald-500/30" : "text-slate-300"
                )}
              >
                {seedCopied ? (
                  <>
                    <CheckCircle2 className="w-4 h-4 mr-2" />
                    Copied!
                  </>
                ) : (
                  <>
                    <Copy className="w-4 h-4 mr-2" />
                    Copy Seed Phrase
                  </>
                )}
              </Button>

              <Button
                onClick={handleBackupComplete}
                disabled={!seedCopied || isCreating}
                className="w-full bg-gradient-to-r from-purple-600 to-cyan-600"
              >
                {isCreating ? (
                  <>
                    <Loader2 className="w-4 h-4 mr-2 animate-spin" />
                    Setting up...
                  </>
                ) : (
                  "I've Saved My Seed Phrase"
                )}
              </Button>
            </div>
          </>
        )}
      </DialogContent>
    </Dialog>
  );
}
