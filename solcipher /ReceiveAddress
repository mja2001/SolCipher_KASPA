import React, { useState } from 'react';
import {
  Dialog,
  DialogContent,
  DialogHeader,
  DialogTitle,
} from "@/components/ui/dialog";
import { Button } from "@/components/ui/button";
import { Badge } from "@/components/ui/badge";
import { 
  Copy, RefreshCw, Shield, Eye, QrCode, 
  CheckCircle2, Info 
} from 'lucide-react';
import { toast } from 'sonner';

export default function ReceiveAddress({ isOpen, onClose, wallet }) {
  const [isGenerating, setIsGenerating] = useState(false);
  const [stealthAddress, setStealthAddress] = useState(null);

  const generateStealthAddress = async () => {
    setIsGenerating(true);
    // Simulate stealth address generation
    await new Promise(resolve => setTimeout(resolve, 1500));
    
    const randomHex = Array.from({ length: 64 }, () => 
      Math.floor(Math.random() * 16).toString(16)
    ).join('');
    
    setStealthAddress(`kaspa:qz${randomHex.slice(0, 58)}`);
    setIsGenerating(false);
    toast.success('New stealth address generated');
  };

  const copyAddress = (address) => {
    navigator.clipboard.writeText(address);
    toast.success('Address copied to clipboard');
  };

  const primaryAddress = wallet?.public_address || 'kaspa:qr0...';

  return (
    <Dialog open={isOpen} onOpenChange={onClose}>
      <DialogContent className="bg-slate-900 border-slate-700 max-w-md">
        <DialogHeader>
          <DialogTitle className="text-white flex items-center gap-2">
            <div className="p-2 bg-gradient-to-br from-emerald-500 to-cyan-500 rounded-lg">
              <Eye className="w-4 h-4 text-white" />
            </div>
            Receive KAS Privately
          </DialogTitle>
        </DialogHeader>

        <div className="space-y-5 py-4">
          {/* Primary Address */}
          <div className="space-y-3">
            <div className="flex items-center justify-between">
              <span className="text-slate-300 text-sm font-medium">Primary Address</span>
              <Badge variant="outline" className="border-slate-600 text-slate-400 text-xs">
                Public
              </Badge>
            </div>
            <div className="bg-slate-800/50 rounded-xl p-4 border border-slate-700/30">
              <div className="flex items-center justify-between">
                <div className="flex-1 mr-3">
                  <p className="text-slate-300 font-mono text-sm break-all">
                    {primaryAddress}
                  </p>
                </div>
                <Button
                  variant="ghost"
                  size="icon"
                  className="text-cyan-400 hover:text-cyan-300 hover:bg-cyan-500/10 flex-shrink-0"
                  onClick={() => copyAddress(primaryAddress)}
                >
                  <Copy className="w-4 h-4" />
                </Button>
              </div>
            </div>
          </div>

          {/* Divider */}
          <div className="relative">
            <div className="absolute inset-0 flex items-center">
              <div className="w-full border-t border-slate-700/50" />
            </div>
            <div className="relative flex justify-center">
              <span className="px-3 bg-slate-900 text-slate-500 text-xs uppercase tracking-wider">
                Enhanced Privacy
              </span>
            </div>
          </div>

          {/* Stealth Address */}
          <div className="space-y-3">
            <div className="flex items-center justify-between">
              <div className="flex items-center gap-2">
                <span className="text-slate-300 text-sm font-medium">Stealth Address</span>
                <Badge className="bg-purple-500/20 text-purple-400 border-purple-500/30 text-xs">
                  <Shield className="w-3 h-3 mr-1" />
                  Private
                </Badge>
              </div>
            </div>

            {stealthAddress ? (
              <div className="bg-gradient-to-br from-purple-500/10 to-cyan-500/10 rounded-xl p-4 border border-purple-500/20">
                <div className="flex items-center justify-between mb-3">
                  <div className="flex items-center gap-2">
                    <CheckCircle2 className="w-4 h-4 text-emerald-400" />
                    <span className="text-emerald-400 text-sm">One-time address ready</span>
                  </div>
                  <Button
                    variant="ghost"
                    size="sm"
                    className="text-purple-400 hover:text-purple-300 h-7"
                    onClick={generateStealthAddress}
                    disabled={isGenerating}
                  >
                    <RefreshCw className={`w-3.5 h-3.5 mr-1 ${isGenerating ? 'animate-spin' : ''}`} />
                    New
                  </Button>
                </div>
                <div className="flex items-center justify-between">
                  <p className="text-slate-300 font-mono text-sm break-all flex-1 mr-3">
                    {stealthAddress}
                  </p>
                  <Button
                    variant="ghost"
                    size="icon"
                    className="text-cyan-400 hover:text-cyan-300 hover:bg-cyan-500/10 flex-shrink-0"
                    onClick={() => copyAddress(stealthAddress)}
                  >
                    <Copy className="w-4 h-4" />
                  </Button>
                </div>
              </div>
            ) : (
              <Button
                onClick={generateStealthAddress}
                disabled={isGenerating}
                className="w-full bg-gradient-to-r from-purple-600 to-cyan-600 hover:from-purple-700 hover:to-cyan-700 h-12"
              >
                {isGenerating ? (
                  <>
                    <RefreshCw className="w-4 h-4 mr-2 animate-spin" />
                    Generating...
                  </>
                ) : (
                  <>
                    <Shield className="w-4 h-4 mr-2" />
                    Generate Stealth Address
                  </>
                )}
              </Button>
            )}
          </div>

          {/* Info Box */}
          <div className="bg-slate-800/30 rounded-xl p-4 border border-slate-700/30">
            <div className="flex items-start gap-3">
              <Info className="w-4 h-4 text-cyan-400 mt-0.5 flex-shrink-0" />
              <div className="space-y-2">
                <p className="text-slate-300 text-sm">
                  <strong>Stealth addresses</strong> provide enhanced privacy by generating a unique, one-time address for each transaction.
                </p>
                <p className="text-slate-500 text-xs">
                  The sender cannot be linked to the recipient, and the address cannot be traced back to your wallet.
                </p>
              </div>
            </div>
          </div>

          {/* QR Code placeholder */}
          <div className="flex justify-center">
            <div className="bg-white rounded-xl p-4 w-40 h-40 flex items-center justify-center">
              <QrCode className="w-24 h-24 text-slate-800" />
            </div>
          </div>
        </div>
      </DialogContent>
    </Dialog>
  );
}
